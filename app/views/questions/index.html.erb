<h1>List of questions</h1>

<% @questions.each do |question| %>
  <p>
    <%= question.title %>
    <%= question.body %>
    <% if user_signed_in? %>
      <% if current_user.owner_of?(question) %>
        <%= link_to 'Delete question', question, method: :delete  %>
      <% end %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Ask question', new_question_path %>